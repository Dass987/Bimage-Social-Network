
<div class="card z-depth-3">
	<form action="/images" method="POST" enctype="multipart/form-data">
		<div class="card-content">
			<span class="card-title blue-grey darken-1 white-text"><i class="material-icons left">add_photo_alternate</i>Upload an Image</span>
			<div class="container">
				<div class="row">
					<div class="col s12 file-field input-field">
						<h4>Image</h4>
						<br>
						<div class="btn blue-grey darken-1 z-depth-0">
							<span>File</span>
							<input type="file" name="image">
						</div>
						<div class="file-path-wrapper">
							<input class="file-path validate" type="text">
						</div>
					</div>
					<div class="col s12 input-field">
						<input type="text" name="title" id="title">
						<label for="title">Title</label>
					</div>
					<div class="col s12 input-field">
						<textarea id="description" name="description" class="materialize-textarea"></textarea>
            <label for="description">Description</label>
					</div>
				</div>
			</div>
		</div>
		<div class="card-action">
			<button id="submit-new-image" type="submit" class="btn waves-effect waves-light blue-grey darken-1 z-depth-0"><i class="material-icons">cloud_upload</i> Upload</button>
		</div>
	</form>
</div>
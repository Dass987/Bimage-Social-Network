<div class="card">
	<div class="card-content">
		<span class="card-title blue-grey darken-1 white-text">
			<i class="material-icons left">whatshot</i>Most Popular
		</span>
		<div class="popular-zone">
			<div class="row">
				{{#each sidebar.popularImages}}
					<div class="col s12 m4 image-field">
						<a href="/images/{{uniqueId}}">
							<img src="/public/upload/{{filename}}" class="responsive-img hoverable">
						</a>
					</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>
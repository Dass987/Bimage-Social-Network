{{#if sidebar.comments}}

	<div class="card">
		<div class="card-content">
			<span class="card-title blue-grey darken-1 white-text">
				<i class="material-icons left">mode_comment</i>Lastest Commnents
			</span>
			<div class="comments-zone">
				{{#each sidebar.comments}}
					<div class="row">
						<div class="col s12 m4 image-field">
							<a href="/images/{{image.uniqueId}}">
								<img src="/public/upload/{{image.filename}}" class="responsive-img hoverable">
							</a>
						</div>
						<div class="col s12 m8">
							<blockquote style="font-style:italic;padding:5px;margin:12px 5px 5px 5px;border-color: #546e7a;">
								{{comment}}
								<span style="display:block;margin-top:10px;">{{name}} - {{timeago timestamp}}...</span>
							</blockquote>
						</div>
					</div>
				{{/each}}
			</div>
		</div>
	</div>

{{/if}}